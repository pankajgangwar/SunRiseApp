<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
       <item name="android:actionBarStyle">@style/ActionBar.Solid.SunRise</item>
    </style>

     <!-- ActionBar style -->
	<style name="ActionBar.Solid.SunRise"
			parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
	<item name="android:background">@color/sunrise_light_blue</item>
	</style> 

	 <!-- Main activity theme -->
<style name="ForecastTheme" parent="AppTheme">
<item name="android:actionBarStyle">@style/ActionBar.Solid.SunRise.NoTitle</item>
</style> 

 <!-- Main activity action bar style -->
<style name="ActionBar.Solid.SunRise.NoTitle" parent="@style/ActionBar.Solid.SunRise">
<!-- <item name="android:displayOptions">useLogo | showHome</item> -->
<item name="android:logo">@drawable/ic_logo</item>
</style> 
</resources>
