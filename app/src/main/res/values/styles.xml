<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/app_primary_color</item>
        <item name="colorPrimaryDark">@color/app_primary_color_dark</item>
        <item name="colorAccent">@color/app_primary_color</item>


    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="colorPrimary">@color/app_primary_color</item>
        <item name="colorPrimaryDark">@color/app_primary_color_dark</item>
        <item name="colorAccent">@color/app_primary_color</item>

    </style>

    <style name="ForecastListStyle">

    </style>

    <!-- ActionBar style  -->
    <style name="ActionBar.Solid.Weather" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/weather_light_blue</item>
    </style>

    <!--Main activity theme  -->
    <style name="ForecastTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.Weather</item>
    </style>

    <style name="ActionBar.Solid.Weather.NoTitle" parent="@style/ActionBar.Solid.Weather">
        <!--   <item name="displayOptions">useLogo | showHome</item> -->
        <item name="logo">@mipmap/ic_launcher</item>
    </style>


</resources>
