<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.weather">

    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-permission android:name="android.permission.READ_USER_DICTIONARY"/>

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

   <!-- <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />-->

    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <permission android:name="com.example.weather.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />
    <uses-permission android:name="com.example.weather.permission.C2D_MESSAGE" />

    <!-- Permissions requir ed by the sync adapter -->
    <uses-permission
        android:name="android.permission.READ_SYNC_SETTINGS"/>
    <uses-permission
        android:name="android.permission.WRITE_SYNC_SETTINGS"/>
    <uses-permission
        android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>

    <permission android:name="com.example.weather.LICENSE_TO_KILL"
        android:protectionLevel="dangerous"
        android:label="Licenced to Kill"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


            <activity
                android:name=".MainActivity"
                android:label="@string/app_name" >
                <intent-filter>
                    <action android:name="android.intent.action.MAIN" />
                    <action android:name="android.intent.action.VIEW" />
                    <category android:name="android.intent.category.LAUNCHER" />
                </intent-filter>
            </activity>

            <activity android:name="com.example.weather.DetailActivity"
                android:label="@string/detail_activity"
                android:parentActivityName="com.example.weather.MainActivity">

                <meta-data android:name="android.support.PARENT_ACTIVITY"
                    android:value="MainActivity"/>

            </activity>

            <activity android:name="com.example.weather.SettingsActivity"
                android:parentActivityName="com.example.weather.MainActivity"
                android:label="@string/settings_activity">
                <meta-data android:name="android.support.PARENT_ACTIVITY"
                    android:value="MainActivity"/>
            </activity>


            <provider android:authorities="@string/content_authority"
                android:name="com.example.weather.data.WeatherProvider"
                android:enabled="true"
                android:exported="false"
                android:syncable="true"
                android:permission="com.example.weather.LICENSE_TO_KILL">

            </provider>

           <!-- <service android:name="com.example.weather.service.SunRiseService"/>-->

            <receiver android:name="com.example.weather.service.SunRiseService$AlarmReceiver"
                android:enabled="true">
            </receiver>

            <!-- SyncAdapter's dummy authentication service -->
            <service android:name="com.example.weather.sync.SunRiseAuthenticatorService">

                <intent-filter >
                    <action android:name="android.accounts.AccountAuthenticator"/>
                </intent-filter>

                <meta-data android:name="android.accounts.AccountAuthenticator"
                    android:resource="@xml/authenticator" />

            </service>

            <!-- The SyncAdapter service -->
            <service android:name="com.example.weather.service.SunRiseService"
                android:exported="true">

                <intent-filter >
                    <action android:name="android.content.SyncAdapter"/>
                </intent-filter>

                <meta-data android:name="android.content.SyncAdapter"
                    android:resource="@xml/syncadapter"/>

            </service>

            <!--Google Cloud Messaging related components-->
           <!-- <receiver
                android:name="com.google.android.gms.gcm.GcmReceiver"
                android:exported="true">
               &lt;!&ndash; android:permission="com.google.android.c2dm.permission.SEND" >&ndash;&gt;

                <intent-filter>
                    <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                    <category android:name="com.example.weather" />
                </intent-filter>

                <intent-filter>
                   &lt;!&ndash; <action android:name="com.google.android.c2dm.intent.REGISTRATION" />&ndash;&gt;
                </intent-filter>

            </receiver>-->


    </application>

</manifest>